---
import Link from "./components/link.astro";

interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
}

const { title, description, buttonText, buttonHref } = Astro.props;
---

<div
  class="bg-gradient-to-bl from-indigo-900 to-indigo-700 p-8 md:px-20 md:py-20 mt-20 flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-6xl tracking-tight">
    {title}
  </h2>
  <p class="text-white/70 mt-4 text-lg md:text-xl">
    {description}
  </p>
  <div class="flex mt-5">
    <Link href={buttonHref} style="inverted">{buttonText}</Link>
  </div>
</div>
