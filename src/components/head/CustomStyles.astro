---
import '@fontsource-variable/inter';

---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0 0 0);
    --aw-color-secondary: rgb(109 40 217);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0 0 0);
    --aw-color-secondary: rgb(109 40 217);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  .bg-indigo-600 {
    background-color: rgb(239 68 68);
  }
  .hover\:bg-indigo-800:hover {
    background-color: rgb(220 38 38);
  }
  .border-indigo-500 {
    border-color: rgb(239 68 68);
  }
  .text-indigo-600 {
    color: rgb(239 68 68);
  }
  .hover\:bg-indigo-50:hover {
    background-color: rgb(254 226 226);
  }
  .text-indigo-800 {
    color: rgb(220 38 38);
  }
  .focus-visible\:ring-indigo-500:focus-visible {
    --tw-ring-color: rgb(239 68 68);
  }
  .focus-visible\:shadow-outline-indigo:focus-visible {
    --tw-shadow-color: rgb(239 68 68);
  }
</style>
