---
import { findImage } from '~/utils/images';

const favIcon = await findImage('~/assets/favicons/favicon.ico');
const favIconSvg = await findImage('~/assets/favicons/favicon.svg');
const appleTouchIcon = await findImage('~/assets/favicons/apple-touch-icon.png');

const getFinalUrl = (image: any): string => {
  if (!image) return '';
  return typeof image === 'string' ? image : image.src;
};
---

<link rel="shortcut icon" href={getFinalUrl(favIcon)} />
<link rel="icon" type="image/svg+xml" href={getFinalUrl(favIconSvg)} />
<link rel="mask-icon" href={getFinalUrl(favIconSvg)} color="#8D46E7" />
<link rel="apple-touch-icon" sizes="180x180" href={getFinalUrl(appleTouchIcon)} />
