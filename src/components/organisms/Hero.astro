---
import { findImage } from "~/utils/images";
import Link from "~/components/atoms/Link.astro";
import Container from "~/components/molecules/Container.astro";
import Image from "~/components/atoms/Image.astro";

interface Props {
    title: string;
    description: string;
    primaryCTA: {
        text: string;
        href: string;
    };
    secondaryCTA: {
        text: string;
        href: string;
    };
}

const { title, primaryCTA, secondaryCTA } = Astro.props;
const description = "A powerful AI wrapper that enhances your GPT experience. Access advanced features, custom instructions, and seamless integrations for maximum productivity.";
const heroImage = await findImage("~/assets/images/hero-screenshot.png");
console.log(heroImage)
---

<div class="overflow-x-clip">
    <Container>
        <main class="grid lg:grid-cols-5 place-items-center relative">
            <div
                class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 right-0 top-0"
            >
            </div>
            <div
                class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 right-56 top-10"
            >
            </div>

            <div class="max-w-sm md:max-w-max lg:col-span-2">
                <h1
                    class="text-3xl lg:text-4xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start"
                >
                    <span class="text-purple-600">Supercharge</span> Your Workflow <span class="relative inline-block">
                        <span class="relative z-10 bg-gradient-to-r from-purple-600 to-indigo-600 text-transparent bg-clip-text">with AppName</span>
                        <span class="absolute inset-0 bg-yellow-200 -z-10 transform -rotate-1"></span>
                    </span>
                </h1>
                <p
                    class="text-lg mt-4 max-w-lg text-slate-600 [text-wrap:balance] text-center lg:text-start"
                >
                    The <span class="font-bold text-purple-600">ultimate AI wrapper</span> that transforms your GPT experience. Unlock <span class="font-bold underline decoration-indigo-300 decoration-2 underline-offset-2">advanced features</span>, implement <span class="font-bold underline decoration-purple-300 decoration-2 underline-offset-2">custom instructions</span>, and leverage <span class="font-bold underline decoration-indigo-300 decoration-2 underline-offset-2">seamless integrations</span> for <span class="bg-gradient-to-r from-purple-600 to-indigo-600 text-white px-2 py-0.5 rounded">10x productivity</span>.
                </p>
                <div
                    class="mt-8 flex flex-col sm:flex-row sm:justify-center lg:justify-start gap-4"
                >
                    <Link
                        href={primaryCTA.href}
                        target="_blank"
                        class="inline-flex gap-1 items-center justify-center text-sm font-medium px-5 py-2.5 rounded-lg shadow-sm hover:shadow-md transition-all duration-200"
                        rel="noopener"
                    >
                        {primaryCTA.text} â†’
                    </Link>
                    <Link
                        size="md"
                        style="outline"
                        rel="noopener"
                        href={secondaryCTA.href}
                        class="inline-flex gap-1 items-center justify-center text-sm font-medium px-5 py-2.5 rounded-lg border border-current hover:bg-gray-50 transition-colors duration-200"
                        target="_blank"
                    >
                        {secondaryCTA.text}
                    </Link>
                </div>
            </div>
            <div class="py-3 lg:col-span-3 lg:-mr-44 relative">
                <div class="absolute -inset-1 bg-white rounded-xl blur-xl"></div>
                <Image
                    src={heroImage}
                    alt="Astronaut in the air"
                    width={800}
                    loading="eager"
                    class="relative"
                />
            </div>
        </main>
    </Container>
</div>