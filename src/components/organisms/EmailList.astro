<div
  class="bg-gradient-to-bl from-indigo-900 to-indigo-700 p-8 md:px-20 md:py-20 mt-20 flex flex-col items-center text-center"
>
  <form
    class="w-full max-w-md mx-auto bg-white/10 backdrop-blur-sm rounded-lg p-6 shadow-xl"
    id="newsletter-form"
    method="POST"
  >
    <h3 class="text-white text-2xl font-bold mb-6">
      Subscribe to our newsletter
    </h3>
    <div class="mb-6">
      <label class="block text-white text-sm font-medium mb-2" for="email">
        Email
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-2 bg-white/20 border border-indigo-300/30 rounded-md text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/50"
      />
    </div>
    <button
      type="submit"
      class="w-full bg-white text-indigo-900 font-medium py-2 px-4 rounded-md hover:bg-indigo-100 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-white/50"
    >
      Subscribe
    </button>
    <div id="subscription-message" class="mt-4 text-white hidden"></div>
  </form>
</div>

<script>
  import { actions } from "astro:actions";
  const form = document.getElementById("newsletter-form");
  const messageEl = document.getElementById("subscription-message");
  
  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target as HTMLFormElement);
    const email = formData.get("email") as string;
    try {
      const result = await actions.submitEmail({ email });
      (e.target as HTMLFormElement).reset();
      if (result.data?.success && messageEl) {
        messageEl.textContent = "Success! You've been subscribed.";
        messageEl.classList.remove("hidden");
        messageEl.classList.add("text-green-200");
      }
    } catch (error) {
      console.error("Failed to subscribe:", error);
      if (messageEl) {
        messageEl.textContent = "Failed to subscribe. Please try again.";
        messageEl.classList.remove("hidden");
        messageEl.classList.add("text-red-200");
      }
    }
  });
</script>
