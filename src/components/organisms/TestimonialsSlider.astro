---
interface Testimonial {
  name: string;
  title: string;
  image: string;
  text: string;
}
const testimonials: Testimonial[] = [
  {
    name: "Aleksander Walkowski",
    title: "Founder, WebLeads",
    image: "https://img.freepik.com/free-photo/portrait-handsome-bearded-european-man-with-grey-hair-beard-smiles-pleasantly-has-kind-expression_273609-45299.jpg?w=740",
    text: "I've tried Buildpad myself to help me with the validation phase - definitely can recommend. Especially that Reddit search feature was super helpful.",
  },
  {
    name: "João Doria Neto",
    title: "Founder",
    image: "https://img.freepik.com/free-photo/portrait-african-american-guy-wearing-grey-hoodie-smiling_482257-111149.jpg?semt=ais_hybrid&w=740",
    text: "Buildpad helped 'unlock' my stall moment in product ideation and development = so flying through the phases in one go was not only a breeze, but very enjoyable!",
  },
  {
    name: "Mohit Vaswani",
    title: "Founder",
    image: "https://img.freepik.com/free-photo/young-bearded-man-with-striped-shirt_273609-5677.jpg?w=740",
    text: "Building a product that people really want is hard. But not now, Buildpad is the perfect platform for people who want to create products and apps that users will love.",
  },
];
---

<div class="w-full bg-white py-16">
  <div class="text-center mb-16">
    <h2 class="text-5xl font-bold mb-4">
      Client <span class="text-[#6366F1]">Testimonials</span>
    </h2>
    <p class="text-gray-600 text-lg">
      Astroship is trusted by the world's leading companies and brands.
    </p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto px-6">
    {
      testimonials.map((testimonial) => (
        <div class="p-8 rounded-xl shadow-lg bg-white hover:-translate-y-2 transition-transform duration-300">
          <div class="flex items-center mb-6">
            <img 
              src={testimonial.image} 
              alt={`${testimonial.name} profile picture`} 
              class="w-16 h-16 rounded-full object-cover mr-4 border-2 border-[#6366F1]"
            />
            <div>
              <h4 class="font-semibold text-xl text-gray-900">{testimonial.name}</h4>
              <p class="text-sm text-gray-600">{testimonial.title}</p>
            </div>
          </div>
          <p class="text-gray-700 text-lg mb-4">{testimonial.text}</p>
          <div class="flex text-yellow-400 mt-4">{"★".repeat(5)}</div>
        </div>
      ))
    }
  </div>
</div>