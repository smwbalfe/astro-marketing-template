---
import Layout from "~/layouts/PageLayout.astro";
import Container from "~/components/molecules/Container.astro";
import PricingComponent, { type Plan } from "~/components/organisms/Pricing.astro";

const metadata = {
    title: "Pricing",
    description: "Simple & Predictable pricing. No Surprises.",
    openGraph: {
        url: "/pricing",
        siteName: "Astrowind",
        images: [],
        locale: "en_US",
        type: "website",
    },
};

const plans: Plan[] = [
    {
        name: "Startup",
        price: "79",
        desc: "Perfect for early-stage SaaS companies",
        color: "indigo",
        popular: false,
        features: [
            "Up to 5 team members",
            "10,000 API calls/month",
            "5 integrations",
            "Email support",
            "Basic analytics",
            "99.5% uptime SLA",
            "Data export",
        ],
        button: {
            text: "Start Free Trial",
            link: "/",
        },
    },
    {
        name: "Scale",
        price: "199",
        desc: "For growing SaaS businesses",
        popular: true,
        color: "orange",
        features: [
            "Up to 20 team members",
            "100,000 API calls/month",
            "Unlimited integrations",
            "Priority support",
            "Advanced analytics",
            "99.9% uptime SLA",
            "Custom workflows",
            "SSO authentication",
        ],
        button: {
            text: "Start Free Trial",
            link: "#",
        },
    },
    {
        name: "Enterprise",
        price: null,
        desc: "Custom solutions for larger organizations",
        popular: false,
        color: "purple",
        features: [
            "Unlimited team members",
            "Custom API limits",
            "Dedicated support team",
            "99.99% uptime SLA",
            "Custom analytics",
            "SAML & SSO",
            "Audit logs",
            "Security compliance",
            "Custom contracts",
        ],
        button: {
            text: "Contact Sales",
            link: "/contact",
        },
    },
];
---

<Layout metadata={metadata}>
    <Container>
        <h1 class="text-4xl font-bold text-center mb-4">Pricing</h1>
        <p class="text-xl text-center text-gray-600 mb-12">
            Simple & Predictable pricing. No Surprises.
        </p>
        <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
            {plans.map((item) => <PricingComponent plan={item} />)}
        </div>
    </Container>
</Layout>
